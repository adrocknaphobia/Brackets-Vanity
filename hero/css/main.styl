@import '../fonts/source-sans/stylesheet.css'

body
	background #F8F8F8
	font-family 'SourceSans'
	-webkit-font-smoothing subpixel-antialiased
header
	width 960px
	height 170px
	position relative
	margin 0 auto
	hgroup
		position absolute
		left 170px
		top 20px
		display block
		width 280px
		height 120
		color #3C4042
		text-shadow 0 1px 0 #FFF
		&:before
			content url('../img/brackets_logo.svg') no-repeat 0 0
			position absolute
			left -110px
			top 10px
			width 100px
			height 100px
			-webkit-border-radius 20px
			-moz-border-radius 20px
			border-radius 20px
			-moz-box-shadow 0 1px 5px hsla(0, 0%, 0%, 0.5)
			-webkit-box-shadow 0 1px 5px hsla(0, 0%, 0%, 0.5)
			box-shadow 0 1px 5px hsla(0, 0%, 0%, 0.5)
		h1
			font-size 60px
			font-weight 700
			margin 21px 0 0 0
		h2
			font-size 18px
			font-weight 200
			margin -7px 0 0 4px
			color #808080
	nav
		position absolute
		top 76px
		right 50px
		li
			display inline-block
			margin 0 0 0 38px
			a
				cursor pointer
				color #666
				text-decoration none
				font-size 15px
				display block
				width 100%
				height 100%
				&:hover
					color #1A1A1A
#hero
	height 360px
	width 100%
	background #EAEAEA
	position relative
	&:before
		position absolute
		width 50%
		height 100%
		background: #DFE2E2
		content ''
		right 0
	.shadow
		width 100%
		height 100%
		&:before
			width 100%
			height 9px
			position absolute
			top 0
			left 0
			content ''
			background-image -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0.20)),to(rgba(0, 0, 0, 0.00)))
			background-image -webkit-linear-gradient(top, rgba(0, 0, 0, 0.20), rgba(0, 0, 0, 0.00))
			background-image -moz-linear-gradient(top, rgba(0, 0, 0, 0.20), rgba(0, 0, 0, 0.00))
			background-image -o-linear-gradient(top, rgba(0, 0, 0, 0.20), rgba(0, 0, 0, 0.00))
			background-image -ms-linear-gradient(top, rgba(0, 0, 0, 0.20), rgba(0, 0, 0, 0.00))
			background-image linear-gradient(top, rgba(0, 0, 0, 0.20), rgba(0, 0, 0, 0.00))	
		&:after
			width 100%
			height 9px
			position absolute
			bottom 0
			left 0
			content ''
			background-image -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0.00)),to(rgba(0, 0, 0, 0.20)))
			background-image -webkit-linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.20))
			background-image -moz-linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.20))
			background-image -o-linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.20))
			background-image -ms-linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.20))
			background-image linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.20))
	.site
		width 960px
		height 100%
		position relative
		margin 0 auto
	.slides
		height 100%
		width 710px
		background #EAEAEA
	nav
		background #DFE2E2
		position absolute
		width 250px
		height 100%
		right 0
		top 0
		ul
			margin-top 70px
		li
			padding 12px 0
			height 16px
			font-weight 200
			font-size 18px
			a
				display block
				text-shadow 0 1px 0 #FFF
				color #777979
				width 100%
				height 100%
				text-decoration none
				margin 0 0 0 60px
			&.selected
				background #D0D5D5
				position relative
				&:before
					content ''
					position absolute
					border-top 10px solid transparent
					border-bottom 10px solid transparent
					border-left 10px solid green
					left 0
					top 10px
				a
					text-shadow 0 1px 1px hsla(0, 0%, 0%, 0.3)
					color #000
					cursor default




